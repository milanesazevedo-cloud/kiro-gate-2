# Kiro Gateway Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED
# ===========================================

PROXY_API_KEY="REPLACE_WITH_A_STRONG_SECRET"

# ===========================================
# MULTI-ACCOUNT MODE (Recommended)
# ===========================================

# Option 1: Comma-separated tokens
# REFRESH_TOKEN="token1,token2,token3,token4,token5"

# Option 2: Numbered tokens (cleaner)
# REFRESH_TOKEN1="token_conta1"
# REFRESH_TOKEN2="token_conta2"
# REFRESH_TOKEN3="token_conta3"
# REFRESH_TOKEN4="token_conta4"
# REFRESH_TOKEN5="token_conta5"

# Background refresh interval (seconds)
# Default: 600 (10 minutes) - more aggressive to prevent token expiry
# Tokens typically expire in ~60 minutes, so we refresh well before that
BACKGROUND_REFRESH_INTERVAL=600

# ===========================================
# OPTIONAL - TOKEN REFRESH SETTINGS
# ===========================================

# Expected streaming duration buffer (seconds).
# When starting a streaming request, we ensure the token is valid for at least
# STREAMING_READ_TIMEOUT + STREAMING_TOKEN_BUFFER to prevent mid-stream expiry.
# Default: 600 (10 minutes)
STREAMING_TOKEN_BUFFER=600

# ===========================================
# OPTIONAL
# ===========================================

KIRO_REGION="us-east-1"
SERVER_HOST="0.0.0.0"
SERVER_PORT="8000"

# Debug
LOG_LEVEL="INFO"
